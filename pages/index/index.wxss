.container {
  margin: 2%;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: space-between;
  box-sizing: border-box;
} 

.title {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 1%;
}

.title_text {
  color: gray;
}

.line {
  margin-right: 2%;
  width: 5rpx;
  height: 50rpx;
  background-color: orange;
}

