.articles {
  border-top: solid 2rpx #c7c7c7;
  /* border-bottom: solid 2rpx #c7c7c7; */
  width: 100%;
  font-size: 27rpx;
  display: flex;
  flex-direction: row;
}


.articles_left {
  margin-top: 2%;
  width: 60%;
  margin-bottom: 3%;
}

.articles_title {
  margin-bottom: 3%;
}

.articles_right {
  margin-top: 2%;
  width: 35%;
  margin-left: 2%;
  color: gray;
  font-weight: bold;
  text-align: right;
  box-sizing: border-box;
  margin-bottom: 3%;
}

.img {
  margin-top: 10%;
  width: 100%;
  border-radius: 10rpx;
}

.articles_bottom {
  color: gray;
  width: 80%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.articles_introduction {
  margin-top: 10%;
  height:50%;
