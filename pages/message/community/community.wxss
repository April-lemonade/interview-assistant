.operations .follow {
  text-align: center;
  font-size: 24rpx;
}

.arrow {
  background-color: #fff;
  border-radius: 50%;
  padding: 14rpx;
  position: fixed;
  right: 30rpx;
  top: calc(50vh - 30rpx);
  box-shadow: rgb(214, 214, 214) 0px 0px 6rpx 3rpx;
}

.comments {
  margin-top: 40rpx;
}

.comments .title {
  font-weight: bold;
}
.comments .com-bar {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.comments image {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
}

.comments .com-bar input {
  margin-left: 18rpx;
  width: 600rpx;
  height: 66rpx;
  border-radius: 14rpx;
  border: rgb(180, 180, 180) solid 1px;
  font-size: 28rpx;
  padding-left: 18rpx;
}

.comments .com-user {
  display: flex;
  margin-top: 20rpx;
}

.comments .com-user .user-content {
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.comments .com-user .date-ope {
  margin-top: 6rpx;
  width: 620rpx;
  display: flex;
  justify-content: space-between;
  text-align: center;
}

.date {
  color: #939192;
  font-size: 24rpx;
  font-weight: normal;
}