.question {
  background-color: #fff;
  padding: 26rpx;
  padding-bottom: 16rpx;
  box-shadow: 0px 0px 4px rgb(236, 236, 236);
}

.question .title {
  font-size: 34rpx;
  font-weight: bold;
}

.question .info {
  margin-top: 18rpx;
  font-size: 26rpx;
  color: #939192;
  font-weight: bold;
}

.answer {
  margin-top: 14rpx;
  background-color: #fff;
  width: 100%;
  height: calc(100vh - 120rpx);
}

.answer .author {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.answer .content {
  font-size: 30rpx;
}

.answer .time {
  color: #939192;
  margin-top: 30rpx;
  font-size: 24rpx;
}

.operations {
  position: fixed;
  bottom: 0;
  width: calc(100vw - 60rpx);
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0px 0px 4px rgb(202, 202, 202);
  padding: 2rpx 30rpx;
}

